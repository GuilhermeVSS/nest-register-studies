generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Producer {
  id      String  @id @default(uuid())
  name    String
  cpfCnpj String  @unique
  farms   Farm[]

  @@index([cpfCnpj])
}

model State {
  id    String  @id @default(uuid())
  name  String
  uf String  @unique
  farms Farm[]

  @@index([uf])
}

model Farm {
  id             String   @id @default(uuid())
  name           String
  city           String
  totalArea      Float
  arableArea     Float
  vegetationArea Float

  producerId     String
  producer       Producer @relation(fields: [producerId], references: [id], onDelete: Cascade)

  stateId        String
  state          State    @relation(fields: [stateId], references: [id])

  harvests       Harvest[]

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([producerId])
  @@index([stateId])
  @@unique([producerId, name])
}

model Harvest {
  id        String   @id @default(uuid())
  name      String   // ex: "Safra 2021", "Safra 2022"
  year      Int

  farmId    String
  farm      Farm     @relation(fields: [farmId], references: [id], onDelete: Cascade)

  crops     Crop[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([farmId])
  @@index([year])
  @@unique([farmId, year])
}


model Crop {
  id        String   @id @default(uuid())
  name      String   // ex: "Soja", "Milho", "Caf√©"

  harvestId String
  harvest   Harvest  @relation(fields: [harvestId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([harvestId])
  @@index([name])
  @@unique([harvestId, name])
}